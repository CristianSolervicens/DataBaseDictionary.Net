<!DOCTYPE html>
<html lang="es-CL">
<head>
    <meta charset="UTF-8">
    <title>@Model["title"]</title>
    <style>
        :root {
            margin: 0;
            padding: 0;
            --font-family: Arial, Helvetica, sans-serif;
            --bg: #fff;
            --accent-bg: #e6e6f6;
            --text: #212121;
            --header-cells: #FFFFFF;
            --text-light: #F2F2F2;
            --light-cells: #FCFCFC;
            --border: #d8dae1;
            --accent: #4b7fcc;
            --code: #FFFFFF;
            --preformatted: #444;
            --marked: #ffdd33;
            --marked2: #c64832b1;
            --disabled: #efefef;
            --brightness: 1;
        }

        body, html {
            /* Set the font globally */
            font-family: var(--font-family);
            scroll-behavior: smooth;
            margin-left: 30px
        }

        table {
            border-collapse: collapse;
            display: block;
            margin: 0.5rem 0;
            overflow: auto;
            width: 100%;
        }

            table td + td {
                border-left: 1px solid #eee;
                padding-left: 5px;
                padding-right: 5px;
            }

        th + th {
            border-left: 1px solid #eee;
            padding-left: 5px;
            padding-right: 5px;
        }

        th,
        th tr {
            background: var(--header-cells);
            border-bottom: 1px solid #555;
            font-weight: bold;
            color: #333;
            margin-top: 2px;
            margin-bottom: 2px;
            padding: 5px;
        }

        td,
        td tr {
            background: var(--light-cells);
            border-bottom: 1px solid #ddd;
            line-height: 150%;
            padding-left: 5px;
            padding-right: 5px;
        }

        table caption {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        a {
            text-decoration: none;
            font-weight: bold;
        }

        .br {
            display: block;
            margin-bottom: 0em;
        }

        .brmedium {
            display: block;
            margin-bottom: 1em;
        }

        .brlarge {
            display: block;
            margin-bottom: 2em;
        }

        .bold {
            font-weight: bold;
            line-height: 200%;
        }

        .object-title{
            line-height: 220%;
            font-size: 120%;
        }

        .enfatizar {
            background: var(--code);
            color: #333;
            line-height: 130%;
        }

        .border {
            border-radius: 5px;
            border: 1px solid var(--border);
            padding: 1rem 1rem 1rem 1rem;
        }

        .center {
            text-align: center;
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }

        .left label {
            display: inline-block;
            width: 20%;
        }

        .left select {
            display: inline-block;
            width: 90%;
        }

        .uni-column {
            display: list-item;
            line-height: 200%;
            list-style-type: circle;
            float: left;
            width: 100%;
        }

        .bi-column {
            display: list-item;
            line-height: 200%;
            list-style-type: circle;
            float: left;
            width: 50%;
        }

        .tri-column {
            display: list-item;
            line-height: 200%;
            list-style-type: circle;
            float: left;
            width: 33%;
        }

        .cuad-column {
            display: list-item;
            list-style-type: circle;
            float: left;
            width: 25%;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .small-font {
            font-size: 8px;
        }

        .margin_left {
            margin-left: 40px;
        }

        .margin_global {
            margin-left: 40px;
            margin-right: 40px;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .logo {
            width: @Model["image_width"]px;
        }

    </style>
</head>
<body class="margin_global">
    <header>
        <div>
            <div><img class="logo" src="data:image/@Model["img_ext"];base64,@Model["image"]"></div>
            <div class="small-font">By:</div>
            <div class="small-font">Cristian Solervicéns - 2024</div>
            <br>
            <h1 class="center bold">Diccionario de Datos: [@Model["database"]]</h1>
        </div>
    </header>

    @RenderBody()

<!-- Fin de Reporte -->
<br>
<br>
<div><img class="logo" src="data:image/ @Model["img_ext"];base64,@Model["image"]"></div>
<div class="small-font">Made By</div>
<div class="small-font">Cristian Solervicéns - 2023</div>
<br>

</body>
</html>
